# OpenAI API 設定
OPENAI_API_KEY="your_openai_api_key_here"

# MariaDB 資料庫設定
DB_HOST="localhost"
DB_USER="your_db_user"
DB_PASSWORD="your_db_password"
DB_NAME="Package"

# Qdrant 向量資料庫設定
QDRANT_HOST="localhost"
QDRANT_PORT=6333
QDRANT_COLLECTION="product_embeddings"
QDRANT_VECTOR_SIZE=1536

# LINE Bot 設定
LINE_CHANNEL_SECRET="your_line_channel_secret"
LINE_CHANNEL_ACCESS_TOKEN="your_line_channel_access_token"
# 使用 ngrok 時，每次啟動都會得到新的 URL，需要更新此值
# 格式：https://your-ngrok-url.ngrok.io/callback
LINE_WEBHOOK_URL="https://your-ngrok-url.ngrok.io/callback"

# Flask 應用設定
FLASK_APP="api.py"
FLASK_ENV="development"
FLASK_DEBUG=1
FLASK_PORT=5000
FLASK_SECRET_KEY="your_flask_secret_key"

# 系統設定
LOG_LEVEL="INFO"
LOG_FILE="app.log"
BACKUP_DIR="/path/to/backup/directory"
MAX_BACKUP_FILES=7

# 產品推薦設定
RECOMMENDATION_LIMIT=5
SIMILARITY_THRESHOLD=0.7
MIN_RECOMMENDATION_INTERVAL=86400  # 24小時（秒）

# 情感分析設定
SENTIMENT_THRESHOLD=0.7
MIN_SENTIMENT_SAMPLES=3 